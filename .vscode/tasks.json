{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build LibraryReservation.exe",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "src/MainProgram.c",
                "src/db.c",
                "src/reservation.c",
                "src/utilities.c",
                "src/sqlite3.c",
                "-o",
                "${workspaceFolder}/LibraryReservation.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Builds the main program from all source files."
        }
    ],
    "version": "2.0.0"
}